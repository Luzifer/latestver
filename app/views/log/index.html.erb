<div class="small pull-right">
  <a href="<%= log_url(format: 'rss') %>"><i class="fa fa-rss"></i> RSS</a>
  &nbsp;|&nbsp;
  <%= t('app.nav.refreshed') %><%= last_catalog_refresh %>
</div>
<h3 class="sub-header">Catalog Update Log</h3>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Timestamp</th>
      <th>Catalog Entry</th>
      <th>Version To</th>
      <th>Version From</th>
      <th>Links</th>
    </tr>
    </thead>
    <tbody>
    <% @catalog_log.each do |l| %>
        <tr>
          <td><%= l.created_at %></td>
          <td><a href="<%= catalog_view_path(name: l.catalog_entry.name, tag: l.catalog_entry.tag) %>"
                ><%= l.catalog_entry.label %></a></td>
          <td class="text-success"><strong><%= l.version_to %></strong></td>
          <td class="text-danger"><%= l.version_from || 'â€”' %></td>
          <td>
            <%= render partial: 'shared/entry_links', locals: {entry: l.catalog_entry} %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
